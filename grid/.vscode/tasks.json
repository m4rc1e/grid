{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-DNDEBUG",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-std=c++17",
                "-I../dependencies/skia/",
                "-L../dependencies/skia/lib",
                "-lskshaper",
                "-lskunicode",
                "-lskparagraph",
                "-lskia",
                "-framework",
                "CoreServices",
                "-framework",
                "CoreGraphics",
                "-framework",
                "CoreText",
                "-framework",
                "CoreFoundation",
                "-framework",
                "Metal",
                "-framework",
                "Foundation",
                "-framework",
                "QuartzCore",
                "${file}",
                "${fileDirname}/pugixml.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}